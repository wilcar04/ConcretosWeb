@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";

    IDictionary<string, string> labels = new Dictionary<string, string>()
            {
                ["addUser"] = "Crear usuario"
            };
}

<div class="container p-3">


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i>
                @labels["addUser"]
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">
                    Correo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                    <a href="/User/Create/@obj.Id">@obj.Email</a>
                    </td>
                    <td width="10%">
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <a type="button" class="btn-delete btn btn-danger btn-sm" onclick="ModalDeleteConfirmation()">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<!-- Modal -->
<div class="modal fade" id="delete-user-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">¿Estás seguro de que deseas eliminar este usuario?</h5>
            </div>
            <div class="modal-body">
                <p>Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close" data-bs-dismiss="modal">Cancelar</button>
                <button asp-controller="User" asp-action="Delete" type="button" class="btn-delete btn btn-danger btn-sm">Sí, eliminar</button>
            </div>
        </div>
    </div>
</div>

