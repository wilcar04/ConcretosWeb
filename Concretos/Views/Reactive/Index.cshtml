@model Reactive;
@{
    ViewData["Title"] = "Listado de reactivos";

    IDictionary<string, string> labels = new Dictionary<string, string>()
    {
        ["name"] = "Nombre",
        ["addReactive"] = "Crear reactivo"
    };
}


<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">@ViewData["Title"]</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Reactive" asp-action="Management" asp-route-id="0" class="btn btn-primary">
            <i class="fas fa-flask"></i>
            @labels["addReactive"]
        </a>
    </div>
</div>

<br />
<br />

<div id="table-reactives">
    <table class="table table-bordered table-striped">

        <thead>

            <tr>
                <th class="text-center">@labels["name"]</th>
            </tr>

        </thead>

        <tbody>

            @foreach (Reactive reactive in ViewData["Reactives"] as List<Reactive>)
            {
                <tr>
                    <td>@reactive.Name</td>
                </tr>

            }

        </tbody>

    </table>
</div>